
<div class="title-container">
  <h3>Next Game</h3>
</div>

<div class="card-game-container">
  <% if @next_game %>
    <div class="pregame-card">
      <div class="card-info">
        <img src="<%= @home_team && @home_team.photo.present? ?cl_image_path(@home_team.photo.key) :asset_path('bcm_logo.png')%>" alt="">
        <div class="flex-time">
          <p><%= @next_game.date.strftime("%d-%m-%Y") %></p>
          <p><%= @next_game.time.strftime("%Hh%M") %></p>
          <p><%= @next_game.arena %></p>
        </div>
        <img src="<%= @away_team && @away_team.photo.present? ?cl_image_path(@away_team.photo.key) :asset_path('sig_logo.png')%>" alt="">
      </div>
      <div class="name-hour">
        <% unless @next_game.nil? %>
          <p><%= @home_team.city %></p>
          <p><%= @away_team.city %></p>
        <% end %>
      </div>
    </div>
    <%= link_to "Prepare your game", new_game_participation_path(@next_game), class: "btn-dashboard"%>
  <% end %>
</div>

<div class="title-container">
  <h3 id='Team'>Your Team Stats</h3>
</div>

<div class="card-stats-container">
  <div class="parent">
   <div class="card-infos-orange-img">
      <p><%= @wins %>W - <%= @losses %>L</p>
      <div class="ratio-logo">
        <div class="info-ratio">
         <h4><%= @win_rate %>%</h4>
          <p>Winrate</p>
        </div>
      </div>
    </div>
    <div class="card-infos-white">
      <h4><%= @avg_pts %> pts</h4>
      <p>scored / game</p>
    </div>
    <div class="card-infos-white">
      <h4>1st</h4>
      <p>championship</p>
      <a target ="_blank" href="https://nm1.ffbb.com/classement">go to ranking ></a>
    </div>
    <div class="card-infos-orange-img">
      <div class="MVP-info">
        <p>Last</p>
        <h4>MVP</h4>
      </div>
      <img id='curry' src="<%= @player && @player.photo.present? ?cl_image_path(@player.photo.key) :asset_path('user.png')%>" alt="">
    </div>
  </div>
</div>
