<div id="global" class="<%= ["img1", "img2", "img3", "img4"].sample %>">

  <div id="divlogo">
    <img id="homepagelogo" src="<%= asset_path('gtlogo.png') %>" alt="GameTracks logo">
  </div>
  <div class="flex-home">
    <div id="divgametracks">
      <h1>
        GAME
        <br>
        TRACKS
      </h1>
    </div>

    <div id="divlevelupyourgame">
      <h4><span id="levelup">Level up</span> your game</h4>
    </div>
  </div>
  <div id="divbtn">
    <% if user_signed_in? %>
      <%= link_to "Dashboard", dashboard_path, class: "btn-login btn-center" %>
      <%#= link_to "sign_out", destroy_user_session_path, data: { turbo_method: :delete } %>
    <% else %>
      <%= link_to "Log In", new_user_session_path, class: "btn-login" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn-signup" %>
    <% end %>
  </div>

</div>
