<!-- app/views/devise/registrations/new.html.erb -->
<div class="form-container">
  <h1 class="custom-title">Sign up</h1>

 <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <h4>Email</h4>
    <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" } %>

    <h4>Name</h4>
    <%= f.input :name, required: true %>

    <h4>Date of Birth</h4>
    <%= f.input :date_of_birth, as: :date, start_year: Date.current.year - 100, end_year: Date.current.year - 10 %>

    <h4>Category</h4>
    <%= f.input :category, collection: ['Coach', 'Player', 'Spectator'], prompt: 'Select a category' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-light" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
